<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools">

    <androidx.constraintlayout.widget.ConstraintLayout
        android:id="@+id/itemViews"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/px4"
        android:layout_marginBottom="@dimen/px4"
        android:clickable="true"
        android:focusable="true">

        <com.jarvis.design_system.textview.CustomTextView
            android:id="@+id/tvStt"
            style="T14H20M"
            android:layout_width="@dimen/px28"
            android:layout_height="wrap_content"
            android:layout_marginStart="@dimen/px16"
            android:textColor="@color/ink_5"
            android:maxLength="2"
            android:ellipsize="end"
            android:maxLines="1"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            tools:text="dsfdsf" />

        <com.jarvis.design_system.textview.CustomTextView
            android:id="@+id/tvName"
            style="@style/T14H20M"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginStart="@dimen/px16"
            android:layout_marginEnd="@dimen/px16"
            android:maxLength="40"
            android:paddingVertical="@dimen/px16"
            android:textColor="@color/ink_5"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintLeft_toRightOf="@+id/tvStt"
            app:layout_constraintRight_toRightOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            tools:text="Manchester United" />

        <View
            android:layout_width="match_parent"
            android:layout_height="@dimen/px1"
            android:background="@color/pri_5"
            app:layout_constraintBottom_toBottomOf="parent" />
    </androidx.constraintlayout.widget.ConstraintLayout>
</layout>
